{
  "openapi": "3.1.0",
  "info": {
    "title": "BRP API Gebeurtenissen",
    "version": "1.0.0",
    "description": "OAS specificatie geclassificeerde events"
  },
  "paths": {
    "/event": {
      "post": {
        "operationId": "publishEvent",
        "summary": "Publiceer events",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Event"
              }
            }
          }
        },
        "responses": {
          "default": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Event": {
        "type": "object",
        "required": [
          "type",
          "data"
        ],
        "discriminator": {
          "propertyName": "type",
          "mapping": {
            "nl.brp.ingeschreven.geboorte": "#/components/schemas/IngeschrevenGeboorteEvent",
            "nl.brp.ingeschreven.immigratie": "#/components/schemas/IngeschrevenImmigratieEvent",
            "nl.brp.ingeschreven.niet-ingezeten": "#/components/schemas/IngeschrevenNietIngezetenEvent",
